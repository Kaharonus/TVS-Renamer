<UserControl x:Class="TVSRenamer.SearchResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSRenamer"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="1014" Margin="5">
    <Grid>
        <Border CornerRadius="5" Background="#333333">
            <Grid Margin="2">
                <TextBlock x:Name="MainText" Margin="5,2,100,0" Foreground="White" Text="wefwef" FontSize="16"/>
                <Grid Margin="35,3" x:Name="Details" HorizontalAlignment="Right">
                    <Image Source="../Icons/info.png"/>
                </Grid>
                <Grid Margin="5,3" x:Name="Selected" HorizontalAlignment="Right">
                    <Image Source="../Icons/success.png"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
